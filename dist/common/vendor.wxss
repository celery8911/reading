
.book-card {
  padding: 10rpx;
  overflow: hidden;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}
.book-card .thumb {
  width: 180rpx;
  height: 180rpx;
  float: left;
  margin: 0 auto;
  overflow: hidden;
}
.book-card .thumb .img {
  max-width: 100%;
  max-height: 100%;
}
.book-card .detail {
  margin-left: 200rpx;
}
.book-card .detail .row {
  line-height: 40rpx;
  margin-bottom: 6rpx;
}
.book-card .detail .right {
  float: right;
}
.book-card .detail .left {
  margin-right: 160rpx;
}
.rate {
  position: relative;
  display: inline-block;
}
.rate .hollow {
  position: absolute;
  display: inline-block;
  top: 0;
  left: 0;
  width: 0;
  overflow: hidden;
}
.comment-list {
  background: #eee;
  font-size: 28rpx;
  overflow: hidden;
}
.comment-list .comment {
  background: #fff;
  padding: 10rpx 20rpx;
  border: 2rpx solid #eee;
}
.comment-list .comment .content {
  margin: 20rpx 0 0;
}
.comment-list .comment .user .inline {
  display: inline-block;
}
.comment-list .comment .user .inline .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}