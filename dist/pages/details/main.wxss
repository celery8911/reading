@import "../../common/vendor.wxss";

.comment {
  font-size: 28rpx;
  margin: 20rpx;
}
.comment .textarea {
  background: #eee;
  border: 1rpx solid #DC5A3B;
  border-radius: 10rpx;
  height: 200rpx;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  margin: 0, auto;
}
.comment .location {
  margin-top: 20rpx;
}
.comment .phone {
  margin: 20rpx 0;
}
.bookinfo {
  font-size: 28rpx;
}
.bookinfo .badge {
  margin: 10rpx 0 10rpx 20rpx;
  padding: 4rpx 10rpx;
  display: inline-block;
  border: 2rpx solid #DC5A3B;
  border-radius: 8rpx;
}
.bookinfo ._p {
  padding: 0 20rpx;
  margin: 20rpx 0;
}
.bookinfo .detail {
  padding: 10rpx 20rpx;
}
.bookinfo .detail .right {
  float: right;
}
.bookinfo .detail .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.bookinfo .thumb {
  width: 750rpx;
  height: 500rpx;
  position: relative;
  overflow: hidden;
}
.bookinfo .thumb .back {
  width: 100%;
  filter: blur(30rpx);
}
.bookinfo .thumb .img {
  position: absolute;
  top: 30rpx;
  height: 300rpx;
  width: 100%;
  left: 0;
}
.bookinfo .thumb .info {
  color: white;
  width: 100%;
  position: absolute;
  top: 350rpx;
  text-align: center;
  left: 0;
}
.bookinfo .thumb .info .title {
  font-size: 40rpx;
}
.bookinfo .thumb .info .author {
  font-size: 28rpx;
}